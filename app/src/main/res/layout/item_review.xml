<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/offset_small1"
    android:layout_marginRight="@dimen/offset_small1"
    android:layout_marginTop="@dimen/offset_small1"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/offset_small2"
    app:cardElevation="@dimen/offset_small3"
    app:contentPadding="@dimen/offset_small1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/offset_big1"
                android:layout_height="@dimen/offset_big1"
                android:layout_marginLeft="@dimen/offset_small1"
                android:layout_marginRight="@dimen/offset_small1"
                android:contentDescription="@null"
                tools:src="@drawable/ic_settings" />

            <TextView
                android:id="@+id/name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/offset_small1"
                android:layout_marginRight="@dimen/offset_small1"
                android:textColor="?attr/colorAccent"
                android:textSize="@dimen/textSize_large2"
                android:textStyle="bold"
                tools:text="Martin " />
        </LinearLayout>

        <TextView
            android:id="@+id/rating_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/offset_small1"
            android:background="@drawable/drawable_shape"
            android:gravity="center"
            android:textSize="@dimen/textSize_large1"
            android:textStyle="bold"
            tools:text="4.5" />

        <TextView
            android:id="@+id/message_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_small1"
            android:layout_marginRight="@dimen/offset_small1"
            android:layout_marginTop="@dimen/offset_small1"
            tools:text="Message" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/link_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_small1"
                android:layout_marginRight="@dimen/offset_small1"
                android:layout_marginTop="@dimen/offset_small1"
                android:layout_weight="1"
                android:autoLink="web"
                android:text="@string/places.go_to_user_profile"
                android:textColor="?attr/colorAccent" />

            <TextView
                android:id="@+id/date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_small1"
                android:layout_marginRight="@dimen/offset_small1"
                android:layout_marginTop="@dimen/offset_small1"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                tools:text="11:12" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>