<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/offset_small1"
    android:layout_marginRight="@dimen/offset_small1"
    android:layout_marginTop="@dimen/offset_small1"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/offset_small2"
    app:cardElevation="@dimen/offset_small3"
    app:contentPadding="@dimen/offset_small1">

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/offset_big4"
        android:layout_height="@dimen/offset_big4"
        android:contentDescription="@null" />

</android.support.v7.widget.CardView>